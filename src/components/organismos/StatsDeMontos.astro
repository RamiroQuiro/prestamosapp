const {capital,pagosCobrados,cuotasInpagas,totalConIntereses}=Astro.props
---
<div class="flex items-center justify-normal gap-2">
    <!-- en circulacion  -->

    <div
      class="bg-white p-3 rounded-lg text-primary-texto font-semibold flex text-center text-xs shadow-lg"
    >
      <div class="border-r px-3 capitalize">
        <p>en circulaci√≥n</p>
        <p class="text-base">$ {cuotasInpagas?.toLocaleString()}</p>

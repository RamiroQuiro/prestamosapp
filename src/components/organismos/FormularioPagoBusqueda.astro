---
import Titulo1 from "../atomos/Titulo1.astro";
import ContenedorFormularioPagar from "./ContenedorFormularioPagar";
import FormularioDeBusqueda from "./FormularioDeBusqueda";
import { db,Cliente,eq } from "astro:db";
const {user}=Astro.locals
const clientes = await db
.select()
.from(Cliente)
.where(eq(Cliente.usuarioId, user.id));

---


<div class="relative flex flex-col w-full h-full p-3">
   <div>
    <Titulo1>Pagar Cuota</Titulo1>
    <FormularioDeBusqueda  clientes={clientes} client:load />

   </div>
<div>
<ContenedorFormularioPagar client:load userId={user.id}/>    
</div>

</div>
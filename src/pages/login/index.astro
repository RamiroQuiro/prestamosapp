---
import Layout from "../../layouts/Layout.astro";
import Formulario from './Formulario'
---

<Layout title="Bienvenido a APPrestamos">
  <main
    class="flex flex-col items-center justify-center w-screen h-screen relative"
  >
    <div class="flex md:flex-row flex-col items-stretch relative md:w-3/5 w-full h-full md:h-[80vh]">
      <div
        class="md:w-4/5 w-full md:rounded-3xl shadow-lg md:h-full bg-gradient-to-br from-primary-100 via-primary-100/90 to-primary-200 text-white flex items-end justify-center flex-col p-10 md:absolute top-0 right-0">
        <h1>Bienvenido a APPrestamos</h1>

      </div>

    </div>
    <div class="absolute  h-screen  md:left-[15%] flex items-center bottom-0 w-full md:w-auto ">
     <Formulario client:load/>
     
    </div>
  </main>
</Layout>
